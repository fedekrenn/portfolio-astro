
---
import type { Project } from "../utils/types";

interface Props {
  proyects: Project[];
}

const { proyects } = Astro.props;
---

<section>
  <h2>Proyectos personales</h2>
  <div>
    {
      proyects.map((project) => (
        <article>
          <h3>{project.title}</h3>
          <img src={`./src/assets/imgs/${project.image}`} alt="">
        </article>
      ))
    }
  </div>
</section>

<style>
  section {
    margin: 40px 0;
  }

  h2 {
    font-size: 2rem;
    margin: 20px 0;
  }

  h3 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 1.3rem;
    text-align: center;
  }

  div {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    grid-area: 'proyects';
    grid-gap: 1rem;
    margin: 20px 0;
  }

  article {
    height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border-radius: 20px;
    position: relative;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    transition: all 0.3s ease;
  }

  article:hover img {
    transform: scale(1.1);
  }
</style>
