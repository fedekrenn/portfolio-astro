---
import type { Project } from "src/types/types";

type Props = {
  experience: Project;
};

const { experience: { id, title, image } = {} } = Astro.props;
---

<article class={`card-${id} shadow`}>
  <a href={`/proyecto/${id}`} transition:name={`${title}-title`}>
    <h3>{title}</h3>
    <img
      src={`./images/${image}`}
      alt={`Proyecto ${title}`}
      transition:name={`${title}-${id}-image`}
      loading="lazy"
    />
  </a>
</article>

<style>
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.5);
    transition: all 0.4s ease;
  }

  img:hover {
    filter: brightness(1.1) contrast(1.1);
  }

  .card-4 {
    grid-area: restaurante;
    img {
      object-fit: cover;
    }
  }

  .card-5 {
    grid-area: krennflix;
    img {
      object-fit: cover;
    }
  }

  .card-6 {
    grid-area: bikeStore;
    img {
      object-fit: cover;
    }
  }

  .card-7 {
    grid-area: apiRestEcommerce;
    img {
      object-fit: cover;
      object-position: 0 -250px;
    }
  }

  .card-8 {
    grid-area: sorteo;
    img {
      object-fit: cover;
    }
  }

  .card-9 {
    grid-area: apiRestBiblioteca;
    filter: brightness(0.9) contrast(1.1);
    img {
      object-fit: cover;
    }
  }

  .card-10 {
    grid-area: curriculum;
    img {
      object-fit: cover;
    }
  }

  h3 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 7px;
    background-color: rgba(0, 0, 0, 0.75);
    color: white;
    font-size: 1.1rem;
    text-align: center;
    z-index: 99;
    text-shadow:
      2px 2px 5px rgba(0, 0, 0),
      -2px -2px 5px rgba(0, 0, 0);
  }

  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    animation: fadeIn linear both;
    animation-timeline: view();
    animation-range: entry 5% cover 20%;
  }

  a {
    height: 100%;
    width: 100%;
  }

  @media (max-width: 950px) {
    .card-7 {
      img {
        object-position: center;
      }
    }
  }

  @media (max-width: 768px) {
    h3 {
      font-size: 1rem;
    }
  }

  @media (max-width: 468px) {
      h3 {
        top: 0;
      }
    }
</style>
