---
import type { Project } from "@utils/types";

type Props = {
  experience: Project;
};

const { experience } = Astro.props;
const { id, title, image } = experience;
---

<article class={`card-${id} shadow`}>
  <a href={`/proyecto/${id}`} transition:name={`${title}-title`}>
    <h3>{title}</h3>
    <img
      src={`./images/${image}`}
      alt={`Proyecto ${title}`}
      transition:name={`${title}-image`}
      loading="lazy"
    />
  </a>
</article>

<style>
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.5);
    transition: all 0.4s ease;
  }

  img:hover {
    transform: scale(1.1);
    filter: brightness(1.1) contrast(1.1);
  }

  .card-4 {
    grid-area: restaurante;
  }

  .card-5 {
    grid-area: krennflix;
  }

  .card-6 {
    grid-area: bikeStore;
  }

  .card-7 {
    grid-area: apiRestEcommerce;
  }

  .card-8 {
    grid-area: regalos;
  }

  .card-9 {
    grid-area: apiRestBiblioteca;
    filter: brightness(0.9) contrast(1.1);
  }

  .card-10 {
    grid-area: curriculum;
    img {
      object-position: 0px;
    }
  }

  h3 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 1.3rem;
    text-align: center;
    z-index: 99;
  }

  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    animation: fadeIn linear both;
    animation-timeline: view();
    animation-range: entry 5% cover 20%;
  }

  a {
    height: 100%;
    width: 100%;
  }
</style>
