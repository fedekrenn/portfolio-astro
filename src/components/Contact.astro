<section id="contact">
  <h2>Contacto:</h2>
  <form action="https://formspree.io/f/xdorqrzz" method="POST">
    <label for="contacName">
      Nombre:
      <input
        type="text"
        name="contacName"
        id="contacName"
        placeholder="Juan Perez..."
        autocomplete="name"
        required
      />
    </label>
    <label for="email">
      Email:
      <input
        type="email"
        name="email"
        id="email"
        placeholder="user@email.com"
        autocomplete="email"
        required
      />
    </label>
    <label for="message">
      Mensaje:
      <textarea name="message" id="message" cols="30" rows="10" required>
      </textarea>
    </label>
    <div>
      <input type="submit" value="Enviar" />
      <input type="reset" value="Borrar" />
    </div>
  </form>
</section>

