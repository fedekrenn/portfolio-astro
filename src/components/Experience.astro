---
import type { Project } from "../utils/types";

interface Props {
  experience: Project[];
}

const { experience } = Astro.props;
---

<section>
  <h2>Experiencia</h2>
  <div>
    {
      experience.map((project) => (
        <article>
          <h3>{project.title}</h3>
          <p>{project.description}</p>
        </article>
      ))
    }
  </div>
</section>

<style>
  section {
    margin: 40px 0;
  }

  h2 {
    font-size: 2rem;
    margin: 20px 0;
  }

  h3 {
    font-size: 1.5rem;
    text-align: center;
  }

  p {
    font-size: 1rem;
  }

  div {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    grid-gap: 1rem;
    margin: 20px 0;
  }

  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
</style>
