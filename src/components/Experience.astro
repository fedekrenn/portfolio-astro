---
import Card from "@components/CardItem.astro";
import { getExperience } from "@services/getData";
import type { Project } from "src/types/types";
---

<section id="experience" class="sub-section">
  <h2>Experiencia</h2>
  <div>
    {getExperience().map((experience: Project) => <Card {experience} />)}
  </div>
</section>

<style>
  section {
    margin: 0;
  }

  div {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 20px 0;
    gap: 20px;
  }

  @media (max-width: 1009px) {
    div {
      justify-content: space-around;
    }
  }
</style>
