---
import type { Project } from "../utils/types";

interface Props {
  experience: Project;
}

const { experience } = Astro.props;
const { title, description, image, tecnologies, date } = experience;
---

<article>
  <h3>{title}</h3>
  <hr />
  <img src={`./images/${image}`} alt={`Imagen del proyecto: ${title}`} />
  <p>{description.substring(0, 200)}...</p>
  <div class="tags-container">
    {tecnologies.map((tecnology) => <span>{tecnology}</span>)}
  </div>
  <time>{date}</time>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-radius: 15px;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.5);
    background-color: #25293579;
  }

  h3 {
    font-size: 1.1em;
    font-weight: 400;
    text-align: center;
  }

  hr {
    width: 100%;
    margin: 10px 0;
  }

  img {
    width: 100%;
    height: 180px;
    max-width: 300px;
    object-fit: cover;
    zoom: 1.8;
    margin: 10px 0;
  }

  p {
    font-size: 0.7em;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 10px 0;
  }

  span {
    font-size: 0.6em;
    background-color: var(--secondary);
    border-radius: 15px;
    padding: 1px 8px;
    margin: 5px;
    text-transform: capitalize;
  }
</style>
