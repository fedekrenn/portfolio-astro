---
import type { Project } from "../utils/types";

interface Props {
  experience: Project;
}

const { experience } = Astro.props;
const { id, title, description, image, tecnologies, date, stack } = experience;
---

<a href={`/experience/${id}`}>
  <article>
    <h3>{title}</h3>
    <hr />
    <div class="data-container">
      <time>{date}</time>
      <span class="stack">{stack}</span>
    </div>
    <img src={`./images/${image}`} alt={`Imagen del proyecto: ${title}`} loading="lazy" />
    <p>{description.substring(0, 200)}...</p>
    <div class="tags-container">
      {tecnologies.map((tecnology) => <span>{tecnology}</span>)}
    </div>
  </article>
</a>

<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    padding: 1rem;
    border-radius: 15px;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.5);
    background-color: #25293579;
    animation: changeOpacity linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
    transition: all 0.3s ease-in-out;
  }

  article:hover {
    box-shadow: 1px 1px 15px #3f50eb52;
    transform: scale(1.01);
  }

  h3 {
    font-size: 1.1em;
    font-weight: bold;
    text-align: center;
  }

  hr {
    width: 100%;
    margin: 10px 0;
  }

  .data-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  time {
    font-size: 0.6em;
  }

  .stack {
    font-size: 0.6em;
    background-color: rgb(86, 219, 86);
    color: black;
    border-radius: 5px;
    padding: 0 5px;
    text-transform: capitalize;
  }

  img {
    width: 100%;
    height: 110px;
    max-width: 300px;
    object-fit: cover;
    zoom: 1.8;
    margin: 5px 0 10px 0;
  }

  p {
    font-size: 0.7em;
    text-wrap: pretty;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    margin: 16px 0 0 0;
  }

  span {
    font-size: 0.6em;
    background-color: var(--secondary);
    border-radius: 15px;
    padding: 1px 8px;
    text-transform: capitalize;
  }

  @keyframes changeOpacity {
    from {
      opacity: .2;
      scale: .8;
    }
    to {
      opacity: 1;
      scale: 1;
    }
  }
</style>
