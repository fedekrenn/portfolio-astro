---
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return [
    { params: { id: "1" } },
    { params: { id: "2" } },
    { params: { id: "3" } },
  ];
}

const { id } = Astro.params;
---

<Layout title={`Proyecto ID: ${id} | Frontend Developer`}>
  <main>
    <h1>Post {id}</h1>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }
</style>
