---
import Layout from "@layouts/Layout.astro";
import Detail from "@components/Detail.astro";
import { getById } from "@services/getData";
import type { Project } from "src/types/types";

export function getStaticPaths() {
  return [
    { params: { id: "1" } },
    { params: { id: "2" } },
    { params: { id: "3" } },
  ];
}

const { id } = Astro.params;

const experience: Project = getById(Number(id));
---

<Layout
  title={`${experience.title} | Federico Krenn`}
  description={experience.description}
>
  <main>
    <Detail {experience} />
  </main>
</Layout>

<style>
  main {
    margin-top: 80px;
  }
</style>
