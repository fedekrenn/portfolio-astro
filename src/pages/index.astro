---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import Experience from "../components/Experience.astro";
import Proyects from "../components/Proyects.astro";
import nombre from "../utils/experience.json";
import type { Accumulator } from "../utils/types";

const { experiences, proyects } = nombre.data.reduce<Accumulator>(
  (acc, el) => {
    if (el.real) {
      acc.experiences.push(el);
    } else {
      acc.proyects.push(el);
    }
    return acc;
  },
  { experiences: [], proyects: [] }
);
