---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { Analytics } from '@vercel/analytics/react';
import "@fontsource-variable/outfit";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="google-site-verification" content="XUaQScHekK-fLIWxvZPcjJqtDV5pLxcv059vER7ypjU" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <Analytics />
  </body>

  <style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --font-family: "Outfit Variable", system-ui, sans-serif;
      --primary: #f5f5f5;
      --secondary: #3f50eb;
      --dark: #13151a;
      scroll-behavior: smooth;
    }

    body {
      font-family: var(--font-family);
      background: var(--dark);
      background-size: 224px;
    }

    main {
      margin: 0 auto;
      padding: 0 20px;
      max-width: 1024px;
      color: var(--primary);
      font-size: 20px;
      line-height: 1.6;
      min-height: 70vh;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 35px;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    img {
      max-width: 100%;
    }

    section.sub-section {
      margin: 130px 0;
    }

    li {
      list-style-type: none;
    }

    .btn {
      width: 40%;
      padding: 10px;
      font-size: 1em;
      border: none;
      border-radius: 10px;
      outline: none;
      color: #0e0e0f;
      background-color: #f3f3f3;
      font-family: var(--font-family);
      font-size: 1em;
      cursor: pointer;
      transition: all 0.2s ease-in-out;
    }

    .btn:hover {
      background-color: var(--secondary);
      color: var(--primary);
    }

    .shadow {
      box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.5);
    }

    .tag {
      font-size: 0.6em;
      background-color: var(--secondary);
      border-radius: 15px;
      padding: 1px 8px;
      text-transform: capitalize;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        translate: 0 50px;
        scale: 0.7;
      }
      to {
        opacity: 1;
        translate: 0 0;
        scale: 1;
      }
    }

    @media (max-width: 768px) {
      main {
        padding: 0 30px;
      }

      h1,
      h2 {
        text-align: center;
      }
    }
  </style>
</html>
